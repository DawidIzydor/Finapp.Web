<Window x:Class="Finapp.Admin.AddUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Add user" Height="143" Width="300">
    <Grid>
        <StackPanel Margin="1,1,1,1">
            <Label Content="User name"/>
            <TextBox x:Name="UserNameTextBox" TextWrapping="Wrap" Width="Auto" HorizontalAlignment="Stretch" TextChanged="UserNameTextBox_TextChanged"/>
            <Label Content="Password"/>
            <PasswordBox x:Name="PasswordBox" Width="Auto" Margin="0,2,0,2" />
            <Button x:Name="AddUserButton" Content="Add user" Margin="0,2,0,2" Click="AddUserButton_Click" />
        </StackPanel>

    </Grid>
</Window>
